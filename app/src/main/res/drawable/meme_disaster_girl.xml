<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E91E63" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Пламя (фон огня) -->
    <item android:top="100dp" android:bottom="40dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Языки пламени 1 -->
    <item android:top="90dp" android:bottom="100dp" android:left="40dp" android:right="120dp">
        <shape android:shape="oval">
            <solid android:color="#FF9800" />
        </shape>
    </item>
    
    <!-- Языки пламени 2 -->
    <item android:top="80dp" android:bottom="110dp" android:left="140dp" android:right="60dp">
        <shape android:shape="oval">
            <solid android:color="#FF9800" />
        </shape>
    </item>
    
    <!-- Языки пламени 3 -->
    <item android:top="70dp" android:bottom="120dp" android:left="90dp" android:right="90dp">
        <shape android:shape="oval">
            <solid android:color="#FFEB3B" />
        </shape>
    </item>
    
    <!-- Девочка (силуэт лица) -->
    <item android:top="20dp" android:bottom="180dp" android:left="120dp" android:right="40dp">
        <shape android:shape="oval">
            <solid android:color="#FFECB3" />
        </shape>
    </item>
    
    <!-- Девочка (волосы) -->
    <item android:top="10dp" android:bottom="200dp" android:left="110dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#795548" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Улыбка -->
    <item android:top="40dp" android:bottom="200dp" android:left="140dp" android:right="60dp">
        <rotate android:fromDegrees="20">
            <shape android:shape="rectangle">
                <solid android:color="#F44336" />
                <size android:width="20dp" android:height="3dp" />
                <corners android:radius="10dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Текст снизу -->
    <item android:top="180dp" android:bottom="20dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Метка мема -->
    <item android:top="8dp" android:left="8dp" android:right="120dp" android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list> 