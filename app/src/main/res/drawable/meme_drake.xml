<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Верхняя панель (отрицание) -->
    <item android:top="8dp" android:bottom="120dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#E57373" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Нижняя панель (принятие) -->
    <item android:top="120dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#81C784" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Рука отрицания (стилизованная) -->
    <item android:top="30dp" android:bottom="150dp" android:left="200dp" android:right="40dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#8D6E63" />
                <size android:width="40dp" android:height="10dp" />
                <corners android:radius="5dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Рука принятия (стилизованная) -->
    <item android:top="140dp" android:bottom="40dp" android:left="180dp" android:right="60dp">
        <rotate android:fromDegrees="-10">
            <shape android:shape="rectangle">
                <solid android:color="#8D6E63" />
                <size android:width="50dp" android:height="10dp" />
                <corners android:radius="5dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Текст наверху -->
    <item android:top="50dp" android:bottom="160dp" android:left="20dp" android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст внизу -->
    <item android:top="160dp" android:bottom="50dp" android:left="20dp" android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Метка мема -->
    <item android:top="8dp" android:left="8dp" android:right="120dp" android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list> 