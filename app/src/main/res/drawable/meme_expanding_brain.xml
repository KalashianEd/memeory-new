<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Первый уровень мозга (маленький) -->
    <item android:top="20dp" android:bottom="190dp" android:left="60dp" android:right="60dp">
        <shape android:shape="oval">
            <solid android:color="#E1F5FE" />
        </shape>
    </item>
    
    <!-- Второй уровень мозга (средний) -->
    <item android:top="80dp" android:bottom="130dp" android:left="40dp" android:right="40dp">
        <shape android:shape="oval">
            <solid android:color="#B3E5FC" />
        </shape>
    </item>
    
    <!-- Третий уровень мозга (большой) -->
    <item android:top="140dp" android:bottom="70dp" android:left="30dp" android:right="30dp">
        <shape android:shape="oval">
            <solid android:color="#81D4FA" />
        </shape>
    </item>
    
    <!-- Четвертый уровень мозга (сияющий) -->
    <item android:top="200dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="#4FC3F7" />
        </shape>
    </item>
    
    <!-- Излучение для четвертого уровня -->
    <item android:top="180dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0029FFC7"
                android:endColor="#1A29FFC7"
                android:angle="90" />
        </shape>
    </item>
    
    <!-- Текст 1 (первый уровень) -->
    <item android:top="40dp" android:bottom="200dp" android:left="140dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст 2 (второй уровень) -->
    <item android:top="100dp" android:bottom="140dp" android:left="140dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст 3 (третий уровень) -->
    <item android:top="160dp" android:bottom="80dp" android:left="140dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст 4 (четвертый уровень) -->
    <item android:top="220dp" android:bottom="20dp" android:left="140dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Метка мема -->
    <item android:top="8dp" android:left="8dp" android:right="120dp" android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list> 