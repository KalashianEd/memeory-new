<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9C27B0" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Голова (лицо) -->
    <item android:top="40dp" android:bottom="120dp" android:left="80dp" android:right="80dp">
        <shape android:shape="oval">
            <solid android:color="#FFE0B2" />
        </shape>
    </item>
    
    <!-- Волосы -->
    <item android:top="30dp" android:bottom="190dp" android:left="75dp" android:right="75dp">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Глаза (левый) -->
    <item android:top="70dp" android:bottom="170dp" android:left="100dp" android:right="140dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Глаза (правый) -->
    <item android:top="70dp" android:bottom="170dp" android:left="140dp" android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Зрачок (левый) -->
    <item android:top="73dp" android:bottom="173dp" android:left="105dp" android:right="145dp">
        <shape android:shape="oval">
            <solid android:color="#3F51B5" />
        </shape>
    </item>
    
    <!-- Зрачок (правый) -->
    <item android:top="73dp" android:bottom="173dp" android:left="145dp" android:right="105dp">
        <shape android:shape="oval">
            <solid android:color="#3F51B5" />
        </shape>
    </item>
    
    <!-- Рот (улыбка) -->
    <item android:top="105dp" android:bottom="145dp" android:left="100dp" android:right="100dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" />
            <solid android:color="#D32F2F" />
        </shape>
    </item>
    
    <!-- Морщины вокруг глаз (левый) -->
    <item android:top="64dp" android:bottom="176dp" android:left="95dp" android:right="145dp">
        <shape android:shape="rectangle">
            <stroke android:color="#BDBDBD" android:width="1dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Морщины вокруг глаз (правый) -->
    <item android:top="64dp" android:bottom="176dp" android:left="145dp" android:right="95dp">
        <shape android:shape="rectangle">
            <stroke android:color="#BDBDBD" android:width="1dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Рубашка -->
    <item android:top="140dp" android:bottom="20dp" android:left="60dp" android:right="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст снизу -->
    <item android:top="180dp" android:bottom="20dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Метка мема -->
    <item android:top="8dp" android:left="8dp" android:right="120dp" android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list>